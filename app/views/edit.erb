<h1>This is the edit page</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Recipe Name</label> <br>
  <input id="name" type="text" name="name" value="<%=@recipe.name%>"/> <br>

  <label for="ingredients">Recipe Ingredients</label><br>
  <input id="ingredients" type="text" name="ingredients" value="<%=@recipe.ingredients%>"> <br>

  <label for="cook_time">Cook Time</label><br>
  <input id="cook_time" type="integer" name="cook_time" value="<%=@recipe.cook_time%>"> <br>

  <input type="submit" />
</form>